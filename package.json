{
  "name": "piggy-boss",
  "version": "1.0.0",
  "description": "DeFi Savings and Yield Platform on Somnia Network",
  "private": true,
  "workspaces": [
    "frontend",
    "contracts"
  ],
  "scripts": {
    "dev": "npm run dev --workspace=frontend",
    "build": "npm run build --workspace=frontend",
    "compile": "npm run compile --workspace=contracts",
    "deploy": "npm run deploy --workspace=contracts",
    "test": "npm run test --workspace=contracts",
    "lint": "npm run lint --workspace=frontend && npm run lint --workspace=contracts",
    "start": "npm run dev",
    "clean": "rm -rf node_modules && npm run clean --workspace=frontend && npm run clean --workspace=contracts"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "typescript": "^5.2.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "keywords": [
    "defi",
    "savings",
    "yield",
    "somnia",
    "blockchain",
    "ethereum",
    "react",
    "typescript"
  ],
  "author": "Piggy Boss Team",
  "license": "MIT"
}
